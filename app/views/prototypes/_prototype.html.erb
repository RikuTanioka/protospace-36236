<div class="card">
  <%= link_to image_tag(prototype.image, class: :card__img ), prototype_path(prototype.id) %>
  <div class="card__body">
    <%= link_to "プロトタイプのタイトル", prototype_path(prototype.id), class: :card__title %>
    <%= prototype.title %>
    <p class="card__summary">
      <%= "プロトタイプのキャッチコピー" %>
      <%= prototype.catch_copy %>
    </p>
    <%= link_to "by プロトタイプの投稿者名", new_user_registration_path(prototype.id), class: :card__user %>
    <%= prototype.user_id %>
  </div>
</div>